<div>
  <div>
    <h1>
      List of all favorites
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Beer
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_favorites.each do |a_favorite| %>
      <tr>
        <td>
          <%= a_favorite.id %>
        </td>

        <td>
          <%= a_favorite.user_id %>
        </td>

        <td>
          <%= a_favorite.beer_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_favorite.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_favorite.updated_at) %> ago
        </td>

        <td>
          <a href="/favorites/<%= a_favorite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
