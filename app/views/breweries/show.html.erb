        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_brewery.description %>">
      </div>

      <div>
        <label for="beers_count_box">
          Beers count
        </label>

        <input type="text" id="beers_count_box" name="query_beers_count" value="<%= @the_brewery.beers_count %>">
