<div class = "container"> 

  <div class = "row"> 
    <div class = "col text-center">
      <h2>Welcome <%= session.fetch(:display_name)%>!</h2>
    </div>
  </div>
<!--**************************************************************-->
  <div class = "row justify-content-center">
    <div class = "col text-center"> 
      <a href = "/beers" type = "button" class = "btn btn-primary btn-block">
        Explore Beers<br><i class="fas fa-beer"></i>
      </a>
    </div>
    <div class = "col text-center">
      <a href = "/breweries" type = "button" class = "btn btn-primary">
        Explore Breweries<br><i class="fas fa-building"></i>
      </a>
    </div>

  </div>
<!--**************************************************************-->
  <br>
<!--**************************************************************-->
  <div class = "row justify-content-center">
    

    <div id="beers_of_the_day" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5" style="width:50%;height:50%;object-fit:contain;">
      <!-- indicators -->
      <ol class = "carousel-indicators">
        <li data-target="#beers_of_the_day" data-slide-to = "0" class="active"></li>
        <li data-target="#beers_of_the_day" data-slide-to = "1"></li>
        <li data-target="#beers_of_the_day" data-slide-to = "2"></li>
      </ol>

      <!-- slides! -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src=<%= @beers_of_the_day.at(0).image %> class="d-block w-100">
        </div>
        <div class="carousel-item">
          <img src=<%= @beers_of_the_day.at(1).image %> class="d-block w-100">
        </div>
        <div class="carousel-item">
          <img src=<%= @beers_of_the_day.at(2).image %> class="d-block w-100">
        </div>
      </div>
      
      <!-- controls -->
      <!--<button class="carousel-control-prev" type="button" data-bs-target="#beers_of_the_day"  data-bs-slide="prev">-->
      <button class="carousel-control-prev" data-bs-target="#beers_of_the_day"  data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>

      <button class="carousel-control-next" type="button" data-bs-target="#beers_of_the_day"  data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div> <!-- end of carousel -->
  
  </div>
<!--**************************************************************-->

</div>



