<div>
  <div>
    <h1>
      List of all styles
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new style
    </h2>

    <form action="/insert_style" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="origin_box">
          Origin
        </label>

        <input type="text" id="origin_box" name="query_origin">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create style
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Origin
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_styles.each do |a_style| %>
      <tr>
        <td>
          <%= a_style.id %>
        </td>

        <td>
          <%= a_style.name %>
        </td>

        <td>
          <%= a_style.origin %>
        </td>

        <td>
          <%= a_style.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_style.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_style.updated_at) %> ago
        </td>

        <td>
          <a href="/styles/<%= a_style.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
